<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/gray_concrete_dark</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="searchViewStyle">@style/SearchView</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:autofilledHighlight" tools:targetApi="o">@drawable/my_drawable</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">@color/colorPrimary</item>
        <item name="queryBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WaitingDialog" parent="android:Theme.Translucent.NoTitleBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >

        <item name="android:windowContentOverlay">@null</item>


    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="SearchAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gray_concrete_dark</item>
        <item name="colorPrimaryDark">@color/gray_charcoal_dark</item>
        <item name="colorAccent">@color/white</item>
    </style>-->

    <style name="ToolbarSaffronBackButton" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ToolbarRedBackButton" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="HomeToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorAccent">@color/saffron</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="NavigationDrawerStyle" parent="AppTheme">
        <item name="colorPrimary">@color/saffron</item>
    </style>


    <style name="MaterialDialogSheet" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/MaterialDialogSheetAnimation</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <!-- Dialog alert -->
    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Neutral</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>
    <!--    Positive button-->
    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="rippleColor">@color/red_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--    Neutral button-->
    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/transparent</item>
        <item name="rippleColor">@color/red_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppThemeVideo" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/white</item>

        <!-- To change the background of options menu-->
        <item name="android:itemBackground">#50000000</item>


    </style>

    <style name="ToolbarStyleVideo" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

    </style>


    <style name="RedIconButtonStyle" parent="@style/Widget.MaterialComponents.Button.Icon">

        <item name="iconTint">@color/white</item>
        <item name="iconPadding">@dimen/_5sdp</item>
        <item name="cornerRadius">@dimen/_15sdp</item>
        <item name="rippleColor">@color/red_light</item>
        <item name="android:backgroundTint">@color/red_normal</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:textColor">@drawable/white_text_selector</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>

    </style>
    
    <style name="LoginCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_20sdp</item>
        <item name="android:paddingBottom">@dimen/_20sdp</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
        <item name="android:paddingRight">@dimen/_20sdp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="cardBackgroundColor">@color/login_card_background</item>
        <item name="cardCornerRadius">@dimen/_20sdp</item>
        
    </style>

    <style name="LoginTextStyleBlack" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="LoginHintTextStyleBlack" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LoginButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/app_theme_color</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>
    <style name="LoginOutlineButtonStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="strokeColor">@color/gray_clouds_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>
    <style name="LoginImageStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/_50sdp</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_background</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">#00a7db</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/txtgrey</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
    </style>
    <style name="LoginTextInputLayoutStyleNoBackgroung" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">#00a7db</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_5sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/txtgrey</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_5sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_5sdp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="cornerRadius">@dimen/_10sdp</item>
    </style>

    <style name="LoginInputStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="cornerRadius">@dimen/_50sdp</item>
        <item name="android:background">@drawable/input_background</item>

    </style>
    <style name="LoginInputStyleNoBackground" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@null</item>

        <item name="cornerRadius">@dimen/_50sdp</item>

    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/asap_bold</item>
    </style>


</resources>
