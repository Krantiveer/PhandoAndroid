                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center|bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
