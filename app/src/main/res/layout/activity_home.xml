                        <ImageView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:backgroundTint="@color/red_dark"
                            android:src="@drawable/ic_arrow_right_app" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_7sdp"
                        android:id="@+id/txtLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_languages" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/_5sdp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="left"
                            android:text="Language"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:backgroundTint="@color/red_dark"
                            android:src="@drawable/ic_arrow_right_app" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_7sdp"
                        android:id="@+id/tvGenres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatImageView
                            app:tint="@color/red_dark"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_genr" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/_5sdp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="left"
                            android:text="Genre"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center"
                            android:backgroundTint="@color/red_dark"
                            android:src="@drawable/ic_arrow_right_app" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginStart="@dimen/_7sdp"
                        android:id="@+id/lytMyDownloads"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center|start"
                        android:orientation="horizontal"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:rotation="0"
                            android:tint="@color/red_dark"
                            android:src="@drawable/ic_download_new" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/_5sdp"

                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="left"
                            android:text="Downloads"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginStart="@dimen/_7sdp"
                        android:id="@+id/lytBill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center|start"
                        android:orientation="horizontal"
                        >

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:rotation="0"
                            android:tint="@color/red_dark"
                            android:src="@drawable/ic_bill" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/_5sdp"

                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="left"
                            android:text="Billing"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp" />


