<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_splash"
    tools:context="com.perseverance.phando.home.profile.login.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/logo"
            layout="@layout/common_app_logo"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/points_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/label_email"
                style="@style/LoginHintTextStyleBlack"
                android:layout_gravity="center"
                android:fontFamily="@font/asap_bold"
                android:textSize="@dimen/_14sdp"
                android:text="Login with Email"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/_10sdp">


                <!-- Email Label -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputEmail"
                        style="@style/LoginInputStyle"
                        android:hint="Email"
                        android:inputType="textEmailAddress" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Label -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/label_password"
                    style="@style/LoginHintTextStyleBlack"
                    android:text="Password"
                    android:visibility="gone" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:passwordToggleEnabled="true"

                    app:passwordToggleTint="@color/red_dark">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/inputPassword"
                        style="@style/LoginInputStyle"
                        android:hint="Password"
                        android:inputType="textPassword" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login"
                    style="@style/LoginButtonStyle"
                    android:text="Next" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/forgotPassword"
                    style="@style/LoginTextStyleBlack"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:onClick="forgotPassword"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="Forgot password?"
                    android:textColor="@color/red_dark"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal"
                    app:strokeColor="@color/transparent" />
            </LinearLayout>

        </LinearLayout>

        <include
            layout="@layout/login_link_container"
            app:layout_constraintTop_toBottomOf="@id/points_card" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signup"
            style="@style/LoginOutlineButtonStyle"
            android:onClick="signup"
            android:text="@string/new_on_dflix_sign_up"
            android:textColor="@color/red_dark"
            app:strokeColor="@color/transparent" />

    </LinearLayout>
</ScrollView>
