<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cvNotificationSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_2sdp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_5sdp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:fontFamily="@font/asap_bold"
            android:drawableEnd="@drawable/ic_right"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:padding="@dimen/_15sdp"
            android:text="Notification Settings"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvParentalControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_2sdp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/_5sdp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:fontFamily="@font/asap_bold"
            android:drawableEnd="@drawable/ic_right"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:padding="@dimen/_15sdp"
            android:text="Parental Control"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"
            android:elevation="@dimen/_2sdp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/_5sdp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btnShare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:clickable="true"
                android:fontFamily="@font/asap_bold"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/_15sdp"
                android:text="Share"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </androidx.cardview.widget.CardView>

        <!--    <View-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="1dp"-->
        <!--        android:background="@color/gray_concrete_light" />-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="1"

            android:elevation="@dimen/_2sdp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/_5sdp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btnRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:fontFamily="@font/asap_bold"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/_15sdp"
                android:text="Rate"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"

        android:fontFamily="@font/asap_bold"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="left"
        android:padding="@dimen/_11sdp"
        android:text="Help"
        android:textColor="@color/gray_clouds_dark"
        android:textSize="@dimen/_12sdp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="@font/asap_bold"

        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="left"
        android:padding="@dimen/_11sdp"
        android:text="Terms of Service"
        android:textColor="@color/gray_clouds_dark"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/privacyPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:fontFamily="@font/asap_bold"

        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="left"
        android:padding="@dimen/_11sdp"
        android:text="Privacy Policy"
        android:textColor="@color/gray_clouds_dark"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/aboutus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_50sdp"

        android:clickable="true"
        android:fontFamily="@font/asap_bold"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="left"
        android:padding="@dimen/_11sdp"
        android:text="About Us"
        android:textColor="@color/gray_clouds_dark"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

</LinearLayout>