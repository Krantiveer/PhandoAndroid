<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/color_back_card"
    android:backgroundTint="@color/color_back_card"
    android:elevation="@dimen/_2sdp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:background="@color/color_back_card">

        <LinearLayout
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:gravity="center|start"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/package_name_zulo"
                android:textSize="@dimen/_12sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout


            android:gravity="end|center"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/package_rupee_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="#ffffff"
                android:textStyle="normal"
                android:text="" />

            <TextView
                android:id="@+id/package_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:textColor="#ffffff"
                android:textStyle="normal" />

            <TextView
                android:visibility="gone"
                android:id="@+id/package_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <ImageView
            app:tint="@color/red_dark"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_right"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"/>


    </LinearLayout>
</androidx.cardview.widget.CardView>