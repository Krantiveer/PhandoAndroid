<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_white_top_round_grey"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtCurrentPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/asap_bold"
        android:text="Current Pin"
        android:textColor="#000000"
        android:textSize="@dimen/_16sdp" />

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/inputCurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textColor="@color/white"
        app:bar_active_color="@color/red_light_new"
        app:bar_enabled="true"
        app:bar_height="2dp"
        app:bar_inactive_color="@color/grey"
        app:height="@dimen/_50sdp"
        app:length="4"
        app:otp_box_background="@drawable/pin_bg"
        app:otp_box_background_active="@drawable/pin_bg"
        app:otp_box_background_inactive="@drawable/pin_bg"
        app:otp_text_size="@dimen/_15sdp"
        app:width="@dimen/_50sdp" />

    <TextView
        android:id="@+id/txtSetPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/asap_bold"
        android:text="Set Pin"
        android:textColor="#000000"
        android:textSize="@dimen/_16sdp" />

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/inputSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textColor="@color/white"
        app:bar_active_color="@color/red_light_new"
        app:bar_enabled="true"
        app:bar_height="2dp"
        app:bar_inactive_color="@color/grey"
        app:height="@dimen/_50sdp"
        app:length="4"
        app:otp_box_background="@drawable/pin_bg"
        app:otp_box_background_active="@drawable/pin_bg"
        app:otp_box_background_inactive="@drawable/pin_bg"
        app:otp_text_size="@dimen/_15sdp"
        app:width="@dimen/_50sdp" />

    <TextView
        android:id="@+id/txtConfirmPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/asap_bold"
        android:text="Confirm PIN"
        android:textColor="#000000"
        android:textSize="@dimen/_16sdp" />

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/inputConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textColor="@color/white"
        app:bar_active_color="@color/red_light_new"
        app:bar_enabled="true"
        app:bar_height="2dp"
        app:bar_inactive_color="@color/grey"
        app:height="@dimen/_50sdp"
        app:length="4"
        app:otp_box_background="@drawable/pin_bg"
        app:otp_box_background_active="@drawable/pin_bg"
        app:otp_box_background_inactive="@drawable/pin_bg"
        app:otp_text_size="@dimen/_15sdp"
        app:width="@dimen/_50sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="#FD5969"
            android:textSize="@dimen/_14sdp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/LoginButtonStyle"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_weight="1"
            android:backgroundTint="@color/red_light_new"
            android:text="Enable"
            android:textColor="@color/white_main"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>


</LinearLayout>