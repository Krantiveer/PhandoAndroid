<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_base_home"
    android:background="@color/bg_app"
    android:clickable="true">

    <com.perseverance.phando.ui.WaitingWheel
        android:id="@+id/footer_progress_base"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:matProg_barColor="@color/progress_bar_color"
        app:matProg_progressIndeterminate="true"
        app:matProg_rimColor="@color/progress_rim_color" />

    <ImageView
        android:id="@+id/banner_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/txt_video_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:maxLines="3"
        android:ellipsize="end"
        android:fontFamily="@font/asap"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:layout_below="@+id/banner_img"
        android:textColor="@color/video_title_color"
        android:textSize="@dimen/_10sdp"
        tools:ignore="MissingPrefix"
        android:text=""
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/rating_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_below="@+id/txt_video_description"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/seprate_color"
            android:visibility="gone"
            android:text=""/>
        <View
            android:id="@+id/seprator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:visibility="gone"
            android:background="@color/seprate_color"/>
        <!--<TextView
            android:id="@+id/txt_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/seprate_color"
            android:visibility="gone"
            android:text=""/>-->
        <TextView
            android:id="@+id/genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/seprate_color"
            android:text=""/>
    </LinearLayout>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipetorefresh_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer_progress_base"
        android:layout_below="@+id/rating_lay"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_base"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_7sdp"
            android:layout_gravity="center_horizontal"
            />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!--<android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer_progress_dm"/>-->

    <TextView
        android:id="@+id/lbl_no_video_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center_horizontal"
        android:paddingTop="64dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textColor="@color/red_light"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>
