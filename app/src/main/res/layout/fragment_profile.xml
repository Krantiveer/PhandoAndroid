    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:scrollbars="none"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:padding="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_user_avatar" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="#34000E"
                android:backgroundTint="#34000E"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/llProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#34000E"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Log in"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/userEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="For better experience"
                            android:textColor="@color/white_main"
                            android:textSize="@dimen/_10sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/userMobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white_main"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/updateProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_edit_profile"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:alpha="0.2"
                android:background="@color/red_dark" />

            <LinearLayout
                android:id="@+id/txtWishlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_wishlist"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/red_dark"
                    android:gravity="left"
                    android:padding="@dimen/_11sdp"
                    android:text=" My Wishlist"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/txtDownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/red_dark"
                    android:drawableStart="@drawable/ic_baseline_file_download_24"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawablePadding="@dimen/_5sdp"
                    android:padding="@dimen/_11sdp"
                    android:drawableTint="@color/red_dark"
                    android:gravity="left"
                    android:text="Downloads"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/txtBilling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_bill"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/red_dark"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="left"
                    android:padding="@dimen/_11sdp"
                    android:text="Billing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/txtSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:elevation="0dp"
                app:cardCornerRadius="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_settings_color"
                    android:drawableEnd="@drawable/ic_right"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableTint="@color/red_dark"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="left"
                    android:padding="@dimen/_11sdp"
                    android:text="Preferences"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubscribe"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:backgroundTint="@color/red_normal"
                android:padding="@dimen/_11sdp"
                android:text="Subscriptions"
                android:visibility="gone" />

            <!--                <com.google.android.material.textview.MaterialTextView-->
