<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/home_widget"
    android:paddingTop="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@drawable/white_text_selector"
            android:textSize="@dimen/_14sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:maxLines="1"
            android:gravity="left"
            android:ellipsize="end"
            android:textStyle="bold"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/txt_see_all"
            fontPath="fonts/Roboto-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_dark"
            android:text="View All"
            android:visibility="visible"
            android:minWidth="80dp"
            android:gravity="right"
            android:paddingRight="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            tools:ignore="MissingPrefix" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_home_items"
            android:layout_width="0dp"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txt_no_video_label"
            fontPath="fonts/Roboto-Light.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_clouds_dark"
            android:gravity="center"
            android:text="No series are found"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/progress_bar_color"
            android:visibility="gone"
            tools:ignore="MissingPrefix" />

        <com.perseverance.phando.ui.WaitingWheel
            android:id="@+id/pagination_progress"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:visibility="gone"
            wheel:matProg_barColor="@color/progress_bar_color"
            wheel:matProg_progressIndeterminate="true"
            wheel:matProg_rimColor="@color/progress_rim_color" />
    </LinearLayout>

</LinearLayout>