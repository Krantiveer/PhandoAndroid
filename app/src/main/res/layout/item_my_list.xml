<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/bg_app"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_app"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/img_thumbnail"
        android:layout_above="@+id/watchingProgress"
        android:layout_margin="@dimen/_5sdp"
        android:background="#F6B126"
        android:paddingLeft="@dimen/_2sdp"
        android:paddingRight="@dimen/_2sdp"
        android:text="Premium"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="@id/img_thumbnail"
        app:layout_constraintBottom_toBottomOf="@id/img_thumbnail" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/play"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:srcCompat="@drawable/play_logo"
        android:layout_centerInParent="true"
        app:layout_constraintLeft_toLeftOf="@id/img_thumbnail"
        app:layout_constraintRight_toRightOf="@id/img_thumbnail"
        app:layout_constraintTop_toTopOf="@id/img_thumbnail"
        app:layout_constraintBottom_toBottomOf="@id/img_thumbnail" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more"
        android:background="@color/transparent"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@drawable/white_text_selector" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/_11sdp"
        app:layout_constraintLeft_toRightOf="@+id/img_thumbnail"
        app:layout_constraintRight_toLeftOf="@+id/option"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@drawable/white_text_selector"
        android:layout_marginLeft="@dimen/_5sdp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintLeft_toRightOf="@+id/img_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:textColor="@drawable/white_text_selector"
        android:drawableLeft="@drawable/ic_rating"
        android:layout_marginLeft="@dimen/_5sdp"
        android:gravity="center" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/details"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text=""
        android:textSize="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        app:layout_constraintLeft_toRightOf="@+id/img_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        android:textColor="@drawable/white_text_selector"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>