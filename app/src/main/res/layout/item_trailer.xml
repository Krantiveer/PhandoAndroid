<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerTrailer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/_10sdp"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/_1sdp"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/video_placeholder"
            android:background="@color/bg_app"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_thumbnail"
            android:layout_alignRight="@+id/img_thumbnail"
            android:visibility="gone"
            android:id="@+id/free"
            android:textColor="@color/white"
            android:text="Premium"
            android:paddingLeft="@dimen/_2sdp"
            android:paddingRight="@dimen/_2sdp"
            android:layout_margin="@dimen/_5sdp"
            android:textSize="@dimen/_8sdp"
            android:background="#F6B126" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_thumbnail"
            android:layout_alignRight="@+id/img_thumbnail"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:fontFamily="@font/asap"
            android:background="@drawable/duration_textview_round_rect_border"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:ellipsize="end"
        android:textStyle="bold"
        android:fontFamily="@font/asap"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:maxLines="2"
        android:minLines="2"
        android:visibility="gone"
        android:textColor="@color/video_title_color"
        android:textSize="@dimen/_12sdp"
        tools:ignore="MissingPrefix" />
</LinearLayout>