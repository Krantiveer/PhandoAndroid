<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.perseverance.phando.home.profile.login.BaseUserLoginFragment">

    <LinearLayout
        android:id="@+id/loginWith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@color/white_main" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/LoginTextStyleBlack"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:text="Or login with"
            android:textColor="@color/white_main"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@color/white_main" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginWith">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/linkMobile"
                style="@style/LoginButtonStyle"
                android:backgroundTint="@color/red_light_new"
                android:text="Log In with Mobile"
                android:textSize="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp"
                android:drawableStart="@drawable/ic_mobile" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/linkEmail"
                style="@style/LoginButtonStyle"
                android:backgroundTint="@color/red_light_new"
                android:text="Log In with Email"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"

                android:drawableStart="@drawable/ic_login_email" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/linkGmail"
                style="@style/LoginButtonStyle"
                android:backgroundTint="@color/red_light_new"
                android:text="Log In with Google"
                android:textSize="@dimen/_10sdp"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_5sdp"

                android:drawableStart="@drawable/ic_gmail" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/linkFacebook"
                style="@style/LoginButtonStyle"
                android:textSize="@dimen/_10sdp"
                android:backgroundTint="@color/red_light_new"
                android:text="Log In with Facebook"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_5sdp"

                android:drawableStart="@drawable/ic_facebook" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
