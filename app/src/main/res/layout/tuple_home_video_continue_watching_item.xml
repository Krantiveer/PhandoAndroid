<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_video"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_2sdp"
    android:layout_marginRight="@dimen/_2sdp"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="0.5px">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/bg_app"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/video_placeholder" />


            <TextView
                android:id="@+id/free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/img_thumbnail"
                android:layout_above="@+id/watchingProgress"
                android:layout_margin="@dimen/_5sdp"
                android:background="#F6B126"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingRight="@dimen/_2sdp"
                android:text="Premium"
                android:textColor="@color/white"
                android:textSize="@dimen/_8sdp"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/watchingProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_thumbnail"
                android:max="100"
                android:progress="45"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:progressTint="@color/red_normal"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:ellipsize="end"
        android:fontFamily="@font/asap"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="@color/video_title_color"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:ignore="MissingPrefix" />
</LinearLayout>