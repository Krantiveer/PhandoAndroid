<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_video"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"

    android:padding="0.5px"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/video_placeholder"
                android:background="@color/bg_app"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name" />

            <!--<ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignTop="@+id/img_thumbnail"
                android:layout_alignRight="@+id/img_thumbnail"
                android:background="@drawable/duration_textview_round_rect_border"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                app:srcCompat="@drawable/ic_play_arrow_black_24dp"
                android:visibility="gone"
                android:id="@+id/free"/>-->

            <!--        <ImageView-->
            <!--            android:layout_width="@dimen/_20sdp"-->
            <!--            android:layout_height="@dimen/_20sdp"-->
            <!--            android:layout_alignTop="@+id/img_thumbnail"-->
            <!--            android:layout_alignRight="@+id/img_thumbnail"-->
            <!--            android:layout_marginTop="@dimen/_5sdp"-->
            <!--            android:layout_marginRight="@dimen/_5sdp"-->
            <!--            app:srcCompat="@drawable/star"-->
            <!--            android:visibility="gone"-->
            <!--            android:id="@+id/free"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_thumbnail"
                android:layout_alignRight="@+id/img_thumbnail"
                android:visibility="gone"
                android:id="@+id/free"
                android:textColor="@color/white"
                android:text="Premium"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingRight="@dimen/_2sdp"
                android:layout_margin="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"
                android:background="#F6B126" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_5sdp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:ellipsize="end"
            android:textStyle="bold"
            android:fontFamily="@font/asap"
            android:lineSpacingExtra="@dimen/_2sdp"
            android:maxLines="2"
            android:minLines="2"
            android:visibility="visible"
            android:textColor="@color/video_title_color"
            android:textSize="@dimen/_12sdp"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_thumbnail"
            android:layout_alignRight="@+id/img_thumbnail"
            android:textColor="@color/white"
            android:textSize="@dimen/_8sdp"
            android:fontFamily="@font/asap"
            android:background="@drawable/duration_textview_round_rect_border"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>